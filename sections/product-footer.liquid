{%- capture footer_blocks -%}
  {%- for block in section.blocks -%}
    {%- if block.settings.product == blank or block.settings.product != blank and all_products[block.settings.product].handle == product.handle -%}
      {%- render 'product-footer-content', block: block, size_class: 'box--bigger box--typo-bigger lap--box--small-fl' -%}
    {%- endif -%}
  {%- endfor -%}
{%- endcapture -%}

{%- unless footer_blocks == blank -%}
  <div id="section-{{ section.id }}" class="site-box-container container--fullscreen add-border">
    {{ footer_blocks }}
  </div>
{%- endunless -%}

{% schema %}
  {
    "name": "Product footer",
    "class": "index-section mount-images mount-video-background mount-custom-footer",
    "max_blocks": 99,
    "blocks": [
      {
        "type": "image",
        "name": "Content",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Your story"
          },
          {
            "type": "text",
            "id": "caption",
            "label": "Text",
            "default": "Share details about the manufacturing process, featured collections, client testimonials, or any extra detail that might be useful for your customers!"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "button",
            "label": "Button"
          },
          {
            "type": "select",
            "id": "txt_align",
            "label": "Text alignment",
            "options": [
              {
                "value": "left",
                "label": "Left"
              },
              {
                "value": "center",
                "label": "Center"
              },
              {
                "value": "right",
                "label": "Right"
              }
            ],
            "default": "center"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Background image"
          },
          {
            "id": "bg_alignment",
            "type": "select",
            "options": [
              {
                "value": "0% 0%",
                "label": "Top left"
              },
              {
                "value": "50% 0%",
                "label": "Top center"
              },
              {
                "value": "100% 0%",
                "label": "Top right"
              },
              {
                "value": "0% 50%",
                "label": "Middle left"
              },
              {
                "value": "50% 50%",
                "label": "Middle center"
              },
              {
                "value": "100% 50%",
                "label": "Middle right"
              },
              {
                "value": "0% 100%",
                "label": "Bottom left"
              },
              {
                "value": "50% 100%",
                "label": "Bottom center"
              },
              {
                "value": "100% 100%",
                "label": "Bottom right"
              }
            ],
            "default": "50% 50%",
            "label": "Image position"
          },
          {
            "id": "video",
            "type": "text",
            "label": "Background video",
            "info": "Path to an .mp4 video file. Video will be replaced by the background image on mobile devices."
          },
          {
            "type": "color",
            "id": "color_text",
            "label": "Text color",
            "default": "rgba(0,0,0,0)"
          },
          {
            "type": "color",
            "id": "color_bg",
            "label": "Background overlay",
            "default": "rgba(0,0,0,0)"
          },
          {
            "type": "product",
            "id": "product",
            "label": "Show on a single product",
            "info": "By default, this block appears on all product pages. If you want it to appear on a specific product, you can select it from here."
          }
        ]
      }
    ]
  }
{% endschema %}