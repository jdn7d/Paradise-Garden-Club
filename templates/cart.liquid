<div class="shopify-section">

  <div id="section-cart" class="site-box-container container--fullscreen box--can-stick">

    <div class="site-box box--big lap--box--small-fl box--typo-big box--top-align box--column-flow box__heading box--add-hr" data-order="0">
      <div class="reduce-top-margin">
        <div class="site-box-content">
          <h1 class="title">{{ 'cart.title' | t }}</h1>
        </div>
      </div>
    </div>

    <div class="site-box box--big lap--box--bigger box--top-align box--column-flow box__cart" data-order="1">

      {% if cart.item_count > 0 %}

        <div class="site-box-content reduce-top-margin">
          <div>
            {% render 'cart-form', type: 'page' %}
          </div>
        </div>

      {% else %}

        <div class="site-box-content reduce-top-margin">
          <div>
            <p>{{ 'cart.empty' | t }}</p>
            <a href="{{ routes.all_products_collection_url }}" class="button color">
              {{ 'cart.continue_browsing' | t }}
            </a>
          </div>
        </div>

      {% endif %}

    </div>

  </div>

</div>
{%- section 'banner-cart' -%}